<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4dp">

    <ImageView
        android:id="@+id/img_icon_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_baseline_favorite_24" />

    <TextView
        android:id="@+id/tv_favourite_number"
        android:layout_width="@dimen/_16dp"
        android:layout_height="@dimen/_16dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_icon_tab"
        android:background="@drawable/bg_tv_favourite_number"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="5"
        android:textSize="@dimen/_10sp" />

    <TextView
        android:id="@+id/tv_title_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_icon_tab"
        android:text="@string/favourite"
        android:textColor="@color/white" />
</RelativeLayout>