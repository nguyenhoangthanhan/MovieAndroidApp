<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/nav_header_bottom"
    android:background="@color/orange_F3BD6D"
    android:padding="20dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_user"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_20dp"
        android:src="@drawable/beginner3"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_120dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/username_nav"
        android:textColor="@color/black1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="Nguyen Van A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg_green_square"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_of_birth"
            android:textColor="@color/black"
            android:text="@string/day_demo"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg_green_square"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/email"
            android:textColor="@color/black"
            android:text="@string/email_demo"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/bg_green_square"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sex"
            android:textColor="@color/black"
            android:text="@string/sex_male"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_12dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_edit_profile"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="@dimen/_12dp"
            android:paddingBottom="@dimen/_12dp"
            android:paddingStart="@dimen/_24dp"
            android:paddingEnd="@dimen/_24dp"
            android:background="@drawable/btn_bg_blue_square_pressed"
            android:textAllCaps="false"
            android:text="@string/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_switch_profile"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_20dp"
            android:paddingTop="@dimen/_12dp"
            android:paddingBottom="@dimen/_12dp"
            android:paddingStart="@dimen/_24dp"
            android:paddingEnd="@dimen/_24dp"
            android:background="@drawable/btn_bg_blue_square_pressed"
            android:textAllCaps="false"
            android:text="@string/switch_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/remind_list_nav"
        android:textColor="@color/black1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="Remind list:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_blue_square_radius_12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_reminder_demo_1"
            android:orientation="vertical"
            android:layout_margin="@dimen/_8dp"
            android:visibility="invisible"
            android:background="@color/green_remind_list_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_movie_info_1"
                android:textColor="@color/black1"
                android:textSize="@dimen/_12sp"
                android:padding="4dp"
                android:text="@string/s_tv_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_movie_reminder_1"
                android:textColor="@color/black1"
                android:textSize="@dimen/_12sp"
                android:padding="4dp"
                android:text="@string/s_tv_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_reminder_demo_2"
            android:orientation="vertical"
            android:layout_margin="@dimen/_8dp"
            android:visibility="invisible"
            android:background="@color/green_remind_list_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_movie_info_2"
                android:textColor="@color/black1"
                android:textSize="@dimen/_12sp"
                android:padding="4dp"
                android:text="@string/s_tv_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_movie_reminder_2"
                android:textColor="@color/black1"
                android:textSize="@dimen/_12sp"
                android:padding="4dp"
                android:text="@string/s_tv_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_show_all_reminders"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_12dp"
        android:paddingTop="@dimen/_12dp"
        android:paddingBottom="@dimen/_12dp"
        android:paddingStart="@dimen/_24dp"
        android:paddingEnd="@dimen/_24dp"
        android:background="@drawable/btn_bg_blue_square_pressed"
        android:textAllCaps="false"
        android:text="@string/show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/info_copyright"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="@string/copy_right_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>